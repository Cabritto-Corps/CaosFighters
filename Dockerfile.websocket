FROM node:20-alpine

WORKDIR /usr/src/app

COPY package.json pnpm-lock.yaml ./

RUN corepack enable \
    && pnpm install

COPY websocket-server.ts tsconfig.json ./

# Build TypeScript to JavaScript to avoid ts-node/ESM issues
RUN npx tsc websocket-server.ts --outDir dist --module commonjs

ENV BACKEND_URL=http://backend:8000
ENV WS_PORT=8080

EXPOSE 8080

CMD ["node", "dist/websocket-server.js"]


